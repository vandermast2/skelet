<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.samapps.skelet.ui.customView.DividerView
        android:id="@+id/dividerCentre"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layerType="software"
        app:color="@color/background"
        app:dashGap="3dp"
        app:dashLength="3dp"
        app:dashThickness="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="vertical" />

    <com.samapps.skelet.ui.customView.DividerView
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layerType="software"
        app:color="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dividerCentre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="vertical" />

    <com.samapps.skelet.ui.customView.DividerView
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layerType="software"
        app:color="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dividerCentre"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="vertical" />

    <com.samapps.skelet.ui.customView.DividerView
        android:id="@+id/dividerLeft"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layerType="software"
        app:color="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="vertical" />

    <com.samapps.skelet.ui.customView.DividerView
        android:id="@+id/dividerRight"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layerType="software"
        app:color="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="vertical" />

    <com.samapps.skelet.ui.customView.DividerView
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layerType="software"
        app:color="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@null" />

    <View
        android:id="@+id/highLow"
        android:layout_width="1dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greyishBrown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/imgOpen"
        android:layout_width="1dp"
        android:layout_height="5dp"
        android:background="@color/blueGreen"
        app:layout_constraintBottom_toBottomOf="@+id/highLow"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toTopOf="@+id/highLow" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imgLast"
        android:layout_width="9dp"
        android:layout_height="23dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/imgOpen"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintTop_toTopOf="@+id/imgOpen" />
</androidx.constraintlayout.widget.ConstraintLayout>